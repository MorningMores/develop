{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Spring Boot Tests",
            "type": "shell",
            "command": "mvn",
            "args": ["test"],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/main_backend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests with Coverage",
            "type": "shell",
            "command": "mvn",
            "args": ["clean", "test", "jacoco:report"],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/main_backend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Unit Tests Only",
            "type": "shell",
            "command": "mvn",
            "args": [
                "test", 
                "-Dtest=**/model/**/*Test,**/dto/**/*Test,**/service/**/*Test,**/controller/**/*Test,**/repository/**/*Test"
            ],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/main_backend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Integration Tests Only",
            "type": "shell",
            "command": "mvn",
            "args": ["test", "-Dtest=**/integration/**/*Test"],
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/main_backend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Build Spring Boot App",
            "type": "shell",
            "command": "mvn",
            "args": ["clean", "compile"],
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/main_backend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        },
        {
            "label": "Run Spring Boot App",
            "type": "shell",
            "command": "mvn",
            "args": ["spring-boot:run"],
            "group": "build",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}/main_backend"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": []
        }
    ]
}
