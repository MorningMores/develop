        "cloudfront:ListDistributions"
      ],
      "Resource": [
        "arn:aws:cloudfront::161326240347:distribution/E1KJ1O0NQAT0B9",
        "arn:aws:cloudfront::161326240347:distribution/E2YNZAOVMES56B",
        "arn:aws:cloudfront::161326240347:distribution/E3PR88512IBK75",
